<% include partials/header %>

<div class="container">
    <h1>Edit <%= article.title %></h1>
    <form action="/articles/<%= article._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label for="articleTitle">Article Title</label>
            <input id="articleTitle" class="form-control" type="text" name="article[title]" placeholder="Title" value="<%= article.title %>">
        </div>
        <div class="form-group">
            <label for="articleSubtitle">Article Subtitle</label>
            <input id="articleSubtitle" class="form-control" type="text" name="article[subtitle]" placeholder="Subtitle" value="<%= article.subtitle %>">
        </div>
        <div class="form-group">
            <label for="articleImage">Image URL</label>
            <input id="articleImage" class="form-control" type="text" name="article[image]" placeholder="Image URL"  value="<%= article.image %>">
        </div>
        <div class="form-group">
            <label for="articleBody">Article Body</label>
            <textarea id="articleBody" class="form-control" rows="10" name="article[body]" placeholder="Article"><%= article.body %></textarea>
        </div>
            
            <input type="submit" class="btn btn-primary btn-lg" value="Update Article">
            <a href="/articles" class="btn btn-default btn-lg" value="Go Back">
    </form>
</div>

<% include partials/footer %>