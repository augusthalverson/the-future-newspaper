<% include ../partials/header %>

<div class="container mt-5">
    <h1>Account</h1>
    
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
            <a class="nav-link active" id="home-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="home" aria-selected="true">Profile</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" id="profile-tab" data-toggle="tab" href="#settings" role="tab" aria-controls="profile" aria-selected="false"><i class="fas fa-cog"></i></a>
        </li>
    </ul>
    
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="home-tab">
           
           <img id="profile-picture" src="/images/placeholders/profile-picture-placeholder.png">
           
           <div class="accountInfo my-5 ">
               
               <div class="account-info-bar row justify-content-between">
                   <span class="col-1 option-label">Name</span>
                   <span class="col-8 value-label text-center"><%= user.firstName %> <%= user.lastName %> </span>
                   <span class="col-1 edit-label"><a href="#"><i class="fas fa-pen"></i></a></span>
               </div>
               <div class="account-info-bar row justify-content-between">
                   <span class="col-1 option-label">Username</span>
                   <span class="col-8 value-label text-center">@<%= user.username %></span>
                   <span class="col-1 edit-label"><a href="#"><i class="fas fa-pen"></i></a></span>
               </div>
               <div class="account-info-bar row justify-content-between">
                   <span class="col-1 option-label">Email</span>
                   <span class="col-8 value-label text-center"><%= user.email %></span>
                   <span class="col-1 edit-label"><a href="#"><i class="fas fa-pen"></i></a></span>
               </div>
               
           </div>
            
           
        </div>
        <div class="tab-pane fade" id="settings" role="tabpanel" aria-labelledby="profile-tab">
            <h1>Settings</h1>
        </div>
       
    </div>
</div>


<% include ../partials/footer %>